<% is_inbox = current_page?(inbox_path) %>
<table class='table table-hover'>
  <thead>
  <tr>
    <th class="col-sm-2"><%= t('messages.inbox.table.th_from') %></th>
    <th><%= t('messages.inbox.table.th_subject') %></th>
    <th class="col-sm-3"><%= t('messages.inbox.table.th_created_at') %></th>
    <% if is_inbox %><th class="col-sm-1"><%= t('messages.inbox.table.th_actions') %></th><% end %>
  </tr>
  </thead>

  <tbody>
  <% @messages.each do |message| %>
    <tr <%= raw('class="warning"') if message.unread %> onclick="location.href='<%= message_path(message) %>'" style="cursor:pointer;">
      <td><%= link_to message.from, user_path_by_email(message.from) %></td>
      <td><%= message.subject %></td>
      <td><%= message.created_at %></td>
      <% if is_inbox %>
      <td>
        <%= link_to t('messages.inbox.btn_destroy'), message, :class => 'btn btn-danger btn-xs',method: :delete, data: { confirm: t('messages.inbox.alert_delete')} %>
      </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>